{
  "name": "reflat-monorepo",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build": "npm run build:web",
    "install:web": "npm --prefix reflat/frontend/reflat-ui ci",
    "install:functions": "npm --prefix reflat/backend/firebasefunctions ci",
    "start:web": "npm --prefix reflat/frontend/reflat-ui start",
    "build:web": "npm --prefix reflat/frontend/reflat-ui run build",
    "build:functions": "npm --prefix reflat/backend/firebasefunctions run build",
    "deploy:hosting": "node scripts/deployHosting.js",
    "deploy:hosting:only": "node scripts/deployHostingOnly.js",
    "deploy:functions": "node scripts/deployFunctions.js",
    "deploy:all": "node scripts/deployAll.js",
    "deploy:hosting+functions": "node scripts/deployHostingFunctions.js",
    "deploy:staging": "npm run build:web && npm run build:functions && FIREBASE_PROJECT=reflat-staging node scripts/deployAll.js",
    "deploy:staging:hosting": "FIREBASE_PROJECT=reflat-staging node scripts/deployHosting.js",
    "deploy:staging:functions": "npm run build:functions && firebase deploy --only functions -P reflat-staging",
    "deploy:staging:functions:build": "npm run build:functions && npm run deploy:staging:functions",
    "deploy:prod": "FIREBASE_PROJECT=reflat node scripts/deployAll.js",
    "deploy:prod:hosting": "FIREBASE_PROJECT=reflat node scripts/deployHosting.js",
    "deploy:prod:functions": "npm run build:functions && FIREBASE_PROJECT=reflat node scripts/deployFunctions.js",
    "upload:direct": "dotenv -f tools/seed/.env -- node tools/seed/upload_project_media.js",
    "upload:direct:staging": "npm run upload:direct -- --env=staging",
    "upload:direct:prod": "npm run upload:direct -- --env=prod",
    "pipeline:staging": "cross-env SEED_ENV=staging node tools/seed/run_pipeline.js",
    "pipeline:prod": "cross-env SEED_ENV=prod node tools/seed/run_pipeline.js",
    "upload:signed": "cd tools/seed && dotenv -- ./upload_via_signed_url.js",
    "upload:signed:dry": "cd tools/seed && dotenv -- ./upload_via_signed_url.js --dry-run",
    "deploy:staging:function": "functionName => npm run build:functions && firebase deploy --only functions:$functionName -P reflat-staging",
    "deploy:prod:function": "functionName => npm run build:functions && firebase deploy --only functions:$functionName -P reflat"
  },
  "dependencies": {
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1"
  },
  "devDependencies": {
    "@google-cloud/storage": "^7.11.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^10.0.0",
    "eslint-plugin-react": "^7.34.2",
    "firebase-tools": "^13.11.2",
    "prettier": "^3.3.2"
  }
}
