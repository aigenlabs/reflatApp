{
  "name": "reflat-monorepo",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build": "npm run build:web",
    "install:web": "npm --prefix reflat/frontend/reflat-ui ci",
    "install:functions": "npm --prefix reflat/backend/firebasefunctions ci",
    "start:web": "npm --prefix reflat/frontend/reflat-ui start",
    "build:web": "npm --prefix reflat/frontend/reflat-ui run build",
    "build:functions": "npm --prefix reflat/backend/firebasefunctions run build",
    "deploy:hosting": "node scripts/deployHosting.js",
    "deploy:hosting:only": "node scripts/deployHostingOnly.js",
    "deploy:functions": "node scripts/deployFunctions.js",
    "deploy:all": "node scripts/deployAll.js",
    "deploy:hosting+functions": "node scripts/deployHostingFunctions.js",
    "deploy:staging": "FIREBASE_PROJECT=reflat-staging node scripts/deployAll.js",
    "deploy:staging:hosting": "FIREBASE_PROJECT=reflat-staging node scripts/deployHosting.js",
    "deploy:staging:functions": "FIREBASE_PROJECT=reflat-staging node scripts/deployFunctions.js",
    "deploy:prod": "FIREBASE_PROJECT=reflat node scripts/deployAll.js",
    "deploy:prod:hosting": "FIREBASE_PROJECT=reflat node scripts/deployHosting.js",
    "deploy:prod:functions": "FIREBASE_PROJECT=reflat node scripts/deployFunctions.js"
  }
}
